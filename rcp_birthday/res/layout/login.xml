<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newbg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_up" >

        <Button
            android:id="@+id/load_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/taber_bark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="用户登录"
            android:textColor="#ffffff"
            android:textSize="20dip" />

        <Button
            android:id="@+id/baidu_zhuce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/zhuce"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="12dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#fffffbf7"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip" >

        <EditText
            android:id="@+id/load_name"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="30.0dip"
            android:background="@drawable/edittext_bg_selector"
            android:dropDownVerticalOffset="0.0dip"
            android:hint="手机号码/注册邮箱/用户名"
            android:maxLength="40"
            android:paddingLeft="10.0dip"
            android:singleLine="true"
            android:textColor="@color/dark"
            android:textColorHint="@color/hintColor" >
        </EditText>

        <EditText
            android:id="@+id/load_password"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="15.0dip"
            android:background="@drawable/edittext_bg_selector"
            android:hint="输入密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="10.0dip"
            android:password="true"
            android:textColor="@color/dark"
            android:textColorHint="@color/hintColor" />

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0dip"
            android:layout_marginTop="15.0dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:text="忘记密码？"
                android:textColor="@color/dark"
                android:textSize="13.0dip"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:background="@drawable/btn_blue_2_selector"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="16.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgedge" />

</LinearLayout>